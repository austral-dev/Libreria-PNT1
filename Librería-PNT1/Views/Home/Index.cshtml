@if (!string.IsNullOrWhiteSpace(ViewBag.CheckoutMessage))
{
    <div class="alert alert-success">
        @ViewBag.CheckoutMessage
    </div>
}

@{
    ViewData["Title"] = "Inicio";
}
<section class="py-4">
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="col-md-8 px-0">
            <h1 class="display-6 fw-bold">Tu libreria online</h1>
            <p class="lead my-3">Explorá novedades, clásicos y rarezas. Envíos a todo el país.</p>
            <a class="btn btn-light" asp-controller="Products" asp-action="Index">Ver catálogo</a>
        </div>
    </div>

    <h2>Novedades</h2>

    <div class="row">
        @foreach (var libro in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@libro.Titulo</h5>
                        <p class="card-text">Autor: @libro.Autor</p>
                        <p class="card-text fw-bold">$ @libro.Precio</p>

                        <a asp-controller="Products"
                           asp-action="Details"
                           asp-route-id="@libro.IdLibro"
                           class="btn btn-primary btn-sm">
                            Ver
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
