@{
    ViewData["Title"] = "Inicio";
}
<section class="py-4">
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="col-md-8 px-0">
            <h1 class="display-6 fw-bold">Tu libreria online</h1>
            <p class="lead my-3">Explorá novedades, clásicos y rarezas. Envíos a todo el país.</p>
            <a class="btn btn-light" asp-controller="Products" asp-action="Index">Ver catálogo</a>
        </div>
    </div>

    <h2 class="h5 mb-3">Novedades</h2>
    <div class="row g-3">
        @for (int i = 0; i < 6; i++)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card book-card h-100">
                    <img src="~/img/placeholder-book.jpg" class="card-img-top" alt="Libro">
                    <div class="card-body">
                        <h3 class="card-title h6">Título de Libro</h3>
                        <p class="text-muted small">Autor/a</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price">$ 12.345</span>
                            <button class="btn btn-sm btn-primary add-to-cart"
                                    data-product-id="1" data-title="Libro demo" data-price="12345">
                                Agregar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
