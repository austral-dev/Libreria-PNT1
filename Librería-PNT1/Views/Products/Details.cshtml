@model Libreria_PNT1.Models.Libro

@{
    ViewData["Title"] = "Detalle del libro";
}

<div class="container my-4">

    <a asp-controller="Products" asp-action="Index" class="btn btn-link">
        &laquo; Volver al catálogo
    </a>

    <div class="row mt-3 g-4">

        <!-- ============================================
             🔥 COLUMNA DE IMAGEN – ESTILO TIENDA
        ============================================= -->
        <div class="col-md-5 d-flex flex-column justify-content-start">

            <div class="p-3 bg-light rounded shadow-sm text-center image-box"
                 style="max-height: 350px;">

                @if (!string.IsNullOrEmpty(Model.Imagen))
                {
                    <img src="~/img/@Model.Imagen"
                         alt="@Model.Titulo"
                         class="img-fluid book-cover"
                         style="max-height: 300px; object-fit: contain;" />
                }
                else
                {
                    <img src="~/img/FUNDACION.jpg"
                         alt="Sin imagen"
                         class="img-fluid book-cover"
                         style="max-height: 300px; object-fit: contain;" />
                }

            </div>

        </div>

        <!-- ============================================
             🔥 COLUMNA DE INFORMACIÓN
        ============================================= -->
        <div class="col-md-7">

            <h2 class="mb-2">@Model.Titulo</h2>
            <p class="text-muted mb-4">Autor: @Model.Autor</p>

            @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
            {
                <p class="mb-4">@Model.Descripcion</p>
            }

            <p class="fs-3 fw-bold text-primary">
                @Model.Precio.ToString("C0")
            </p>

            <p class="mb-3">
                <strong>Categoría:</strong> @Model.CategoriaNombre
            </p>

            @if (!Model.Disponible || Model.Stock <= 0)
            {
                <div class="alert alert-danger fw-bold mt-3">
                    No disponible actualmente
                </div>
            }
            else
            {
                <div class="alert alert-success fw-bold mb-3">
                    En stock — @Model.Stock unidades disponibles
                </div>

                <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">

                    <input type="hidden" name="id" value="@Model.IdLibro" />

                    <div class="input-group mb-3" style="max-width: 200px;">
                        <span class="input-group-text">Cant.</span>
                        <input type="number" name="cantidad" value="1" min="1"
                               class="form-control" />
                    </div>

                    <button type="submit"
                            class="btn btn-primary btn-lg px-4">
                        🛒 Agregar al carrito
                    </button>
                </form>
            }

        </div>
    </div>
</div>

<!-- ============================================
     🔥 ESTILOS PERSONALIZADOS PARA EL EFECTO ZOOM
============================================== -->
<style>
    .image-box {
        overflow: hidden;
        position: relative;
    }

    .book-cover {
        transition: transform 0.3s ease;
        cursor: zoom-in;
    }

        .book-cover:hover {
            transform: scale(1.08);
        }
</style>