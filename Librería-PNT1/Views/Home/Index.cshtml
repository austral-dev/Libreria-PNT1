@if (!string.IsNullOrWhiteSpace(ViewBag.CheckoutMessage))
{
    <div class="alert alert-success">
        @ViewBag.CheckoutMessage
    </div>
}

@{
    ViewData["Title"] = "Inicio";
}
<section class="py-4">
    <div class="hero-banner">
        <h1>Tu librería online</h1>
        <p>Explorá novedades, clásicos y rarezas. Envíos a todo el país.</p>

        <a asp-controller="Products" asp-action="Index" class="btn btn-light">
            Ver catálogo
        </a>
    </div>

    <h2 class="mb-4 mt-5">Novedades</h2>

    <div class="row">
        @foreach (var libro in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@libro.Titulo</h5>
                        <p class="card-text">Autor: @libro.Autor</p>
                        <p class="card-text fw-bold">$ @libro.Precio</p>

                        <a asp-controller="Products"
                           asp-action="Details"
                           asp-route-id="@libro.IdLibro"
                           class="btn btn-primary btn-sm">
                            Ver
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
