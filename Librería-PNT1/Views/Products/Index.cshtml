@{
    ViewData["Title"] = "Catálogo";
}

<h1 class="h4 mb-3">Catálogo</h1>

<div class="row g-3 mb-3">
    <div class="col-12 col-md-4">
        <input class="form-control" id="searchInput" placeholder="Buscar por título o autor..." />
    </div>
    <div class="col-12 col-md-3">
        <select class="form-select" id="categorySelect">
            <option value="">Todas las categorías</option>
            <option>Ficción</option>
            <option>No Ficción</option>
            <option>Poesía</option>
        </select>
    </div>
    <div class="col-12 col-md-auto">
        <button class="btn btn-outline-secondary" id="applyFilters">Aplicar</button>
    </div>
</div>

<div id="productsGrid" class="row g-3">
    @for (int i = 0; i < 12; i++)
    {
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card book-card h-100">
                <img src="~/img/placeholder-book.jpg" class="card-img-top" alt="Libro">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title h6 mb-1">Libro @i</h3>
                    <p class="text-muted small mb-2">Autor @i</p>
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="price">$ @(10000 + i * 300)</span>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Products" asp-action="Details" asp-route-id="@i">Ver</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>