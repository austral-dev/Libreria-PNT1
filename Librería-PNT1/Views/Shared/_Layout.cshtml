@{
    var title = ViewData["Title"] as string ?? "Librería-PNT1";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Librería-PNT1</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="border-bottom">
        <nav class="navbar navbar-expand-lg container navbar-light bg-white">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Librería-PNT1</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <form class="d-flex ms-lg-4 my-2 my-lg-0 flex-grow-1" role="search" action="/products/index" method="get">
                    <input class="form-control me-2" name="q" type="search" placeholder="Buscar libros, autores..." aria-label="Buscar">
                    <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                </form>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Catálogo</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Nosotros</a></li>
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                            🛒 Carrito
                            <span id="cart-count" class="badge text-bg-primary position-absolute top-0 start-100 translate-middle rounded-pill">0</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light border-top py-4 mt-auto">
        <div class="container small text-muted d-flex flex-wrap gap-2 justify-content-between">
            <span>© @DateTime.Now.Year Librería-PNT1</span>
            <span><a asp-controller="Contact" asp-action="Index">Contacto</a> · <a href="#">Términos</a></span>
        </div>
    </footer>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/cart.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
