@model IEnumerable<Libreria_PNT1.Models.Libro>

@{
    ViewData["Title"] = "Catálogo";
}

<h2>Catálogo</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <form class="d-flex" method="get">
            <input class="form-control me-2"
                   type="search"
                   name="q"
                   value="@Context.Request.Query["q"]"
                   placeholder="Buscar por título o autor..." />
            <button class="btn btn-outline-secondary" type="submit">Buscar</button>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <p>No hay libros para mostrar.</p>
}
else
{
    <div class="row g-4">
        @foreach (var libro in Model)
        {
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@libro.Titulo</h5>
                        <p class="card-text text-muted">Autor: @libro.Autor</p>

                        @if (!string.IsNullOrWhiteSpace(libro.Descripcion))
                        {
                            <p class="card-text small text-muted">
                                @libro.Descripcion
                            </p>
                        }

                        <p class="mt-2 fw-bold">
                            $ @libro.Precio.ToString("N0")
                        </p>

                        @* Info de disponibilidad *@
                        @if (!libro.Disponible || libro.Stock <= 0)
                        {
                            <span class="badge bg-secondary mb-2">No disponible</span>
                        }
                        else
                        {
                            <span class="badge bg-success mb-2">En stock (@libro.Stock)</span>
                        }

                        <div class="mt-auto">
                            <a asp-controller="Products"
                               asp-action="Details"
                               asp-route-id="@libro.IdLibro"
                               class="btn btn-outline-primary btn-sm mt-2
                                              @((!libro.Disponible || libro.Stock <= 0) ? "disabled" : "")">
                                Ver
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}