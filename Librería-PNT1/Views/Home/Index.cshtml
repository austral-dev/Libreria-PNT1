@model IEnumerable<Libreria_PNT1.Models.Libro>

@if (!string.IsNullOrWhiteSpace(ViewBag.CheckoutMessage))
{
    <div class="alert alert-success">
        @ViewBag.CheckoutMessage
    </div>
}

@{
    ViewData["Title"] = "Inicio";
}

<section class="py-4">
    <div class="hero-banner">
        <h1>Tu librería online</h1>
        <p>Explorá novedades, clásicos y rarezas. Envíos a todo el país.</p>

        <a asp-controller="Products" asp-action="Index" class="btn btn-light">
            Ver catálogo
        </a>
    </div>

    <h2 class="mb-4 mt-5">Novedades</h2>

    <div class="row">
        @foreach (var libro in Model)
        {
            // Lógica de imagen: Si viene vacía, usamos una por defecto (asegurate que exista)
            var imagenNombre = string.IsNullOrEmpty(libro.Imagen) ? "FUNDACION.jpg" : libro.Imagen;

            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm book-card">

                    <img src="~/img/@imagenNombre"
                         class="card-img-top"
                         alt="@libro.Titulo"
                         asp-append-version="true"
                         style="height: 280px; object-fit: cover; width: 100%;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@libro.Titulo">@libro.Titulo</h5>
                        <p class="card-subtitle mb-2 text-muted">@libro.Autor</p>

                        <div class="mt-auto">
                            <p class="price-tag mb-2">$@libro.Precio</p>

                            <a asp-controller="Products"
                               asp-action="Details"
                               asp-route-id="@libro.IdLibro"
                               class="btn btn-primary w-100">
                                Ver Detalle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
