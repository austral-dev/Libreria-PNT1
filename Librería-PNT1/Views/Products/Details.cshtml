@model Libreria_PNT1.Models.Libro

@{
    ViewData["Title"] = "Detalle del libro";
}

<div class="container my-4">
    <a asp-controller="Products" asp-action="Index" class="btn btn-link">
        &laquo; Volver al catálogo
    </a>

    <div class="row mt-3">
        <div class="col-md-8">
            <h2>@Model.Titulo</h2>
            <p class="text-muted">Autor: @Model.Autor</p>

            @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
            {
                <p>@Model.Descripcion</p>
            }

            <p class="fs-4 fw-bold">
                Precio: @Model.Precio.ToString("C0")
            </p>

            <p>
                <strong>Categoría:</strong> @Model.Categoria
            </p>

            @if (!Model.Disponible || Model.Stock <= 0)
            {
                <div class="alert alert-warning mt-3">
                    Este libro <strong>no está disponible</strong> actualmente.
                </div>
            }
            else
            {
                <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
                    <input type="hidden" name="id" value="@Model.IdLibro" />
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <span class="input-group-text">Cant.</span>
                        <input type="number" name="cantidad" value="1" min="1" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Agregar al carrito
                    </button>
                </form>
            }
        </div>
    </div>
</div>