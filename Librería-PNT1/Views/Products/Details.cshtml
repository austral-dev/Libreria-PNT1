@{
    ViewData["Title"] = "Detalle";
}
<div class="row g-4">
    <div class="col-md-4">
        <img src="~/img/placeholder-book.jpg" class="img-fluid rounded" alt="Libro">
    </div>
    <div class="col-md-8">
        <h1 class="h4">Título del Libro</h1>
        <p class="text-muted">Autor/a</p>
        <p class="lead">Descripción breve. Editorial, año, páginas, etc.</p>

        <div class="d-flex align-items-center gap-3 my-3">
            <span class="price fs-4">$ 12.345</span>
            <div class="input-group" style="max-width: 160px;">
                <button class="btn btn-outline-secondary qty-minus" type="button">-</button>
                <input type="number" class="form-control text-center qty-input" value="1" min="1">
                <button class="btn btn-outline-secondary qty-plus" type="button">+</button>
            </div>
        </div>

        <button class="btn btn-primary add-to-cart"
                data-product-id="1" data-title="Título del Libro" data-price="12345">
            Agregar al carrito
        </button>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('.qty-minus')?.addEventListener('click', () => {
          const input = document.querySelector('.qty-input');
          input.value = Math.max(1, parseInt(input.value || "1", 10) - 1);
        });
        document.querySelector('.qty-plus')?.addEventListener('click', () => {
          const input = document.querySelector('.qty-input');
          input.value = (parseInt(input.value || "1", 10) + 1);
        });
    </script>
}