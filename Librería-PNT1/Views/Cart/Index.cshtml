@model IEnumerable<Libreria_PNT1.Controllers.CartController.CartItem>

@{
    ViewData["Title"] = "Carrito";
    var subtotal = (decimal)(ViewBag.Subtotal ?? 0m);
}

<div class="container my-4">
    <h2>Carrito</h2>

    @if (!Model.Any())
    {
        <p>Tu carrito está vacío.</p>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">@item.Titulo</h5>
                                <p class="card-text text-muted">Autor: @item.Autor</p>
                                <p class="card-text">
                                    Precio: $ @item.PrecioUnitario.ToString("N0") ·
                                    Cantidad: @item.Cantidad ·
                                    Subtotal: $ @item.Subtotal.ToString("N0")
                                </p>
                            </div>
                            <form asp-action="Remove" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.IdLibro" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h4>Resumen</h4>
                        <p>Subtotal: $ @subtotal.ToString("N0")</p>
                        <p>Envío: $ 0</p>
                        <hr />
                        <p class="fw-bold">Total: $ @subtotal.ToString("N0")</p>
                        <form asp-controller="Checkout" asp-action="Index" method="get">
                            <button type="submit" class="btn btn-primary w-100">
                                Finalizar compra
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
